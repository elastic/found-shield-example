<?xml version='1.0' encoding='UTF-8'?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0">
    <modelVersion>4.0.0</modelVersion>
    <groupId>no.found.elasticsearch</groupId>
    <artifactId>found-shield-example</artifactId>
    <packaging>jar</packaging>
    <description>found-shield-example</description>
    <url>https://github.com/elastic/found-shield-example</url>
    <version>1.7.1</version>
    <licenses>
        <license>
            <name>MIT</name>
            <url>http://opensource.org/licenses/MIT</url>
            <distribution>repo</distribution>
        </license>
    </licenses>
    <name>found-shield-example</name>
    <organization>
        <name>Elastic</name>
        <url>https://github.com/elastic/found-shield-example</url>
    </organization>
    <scm>
        <url>git@github.com/elastic/found-shield-example.git</url>
        <connection>scm:git:git@github.com/elastic/found-shield-example.git</connection>
    </scm>
    <developers>
        <developer>
            <id>nkvoll</id>
            <name>Njal Karevoll</name>
            <url>http://www.elastic.co</url>
        </developer>
    </developers>
    <dependencies>
        <dependency>
            <groupId>org.elasticsearch</groupId>
            <artifactId>elasticsearch</artifactId>
            <version>1.7.1</version>
        </dependency>
        <dependency>
            <groupId>org.elasticsearch</groupId>
            <artifactId>elasticsearch-shield</artifactId>
            <version>1.2.1</version>
        </dependency>
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
            <version>1.0.13</version>
        </dependency>
    </dependencies>
    <repositories>
          <!-- add the elasticsearch repo -->
          <repository>
             <id>elasticsearch-releases</id>
             <url>https://artifacts.elastic.co/maven</url>
             <releases>
                <enabled>true</enabled>
             </releases>
             <snapshots>
                <enabled>false</enabled>
             </snapshots>
          </repository>
        <repository>
            <id>elasticsearch-snapshots</id>
            <url>http://maven.elasticsearch.org/snapshots</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
       </repositories>
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.2.1</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>java</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <mainClass>no.found.elasticsearch.example.TransportExample</mainClass>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
